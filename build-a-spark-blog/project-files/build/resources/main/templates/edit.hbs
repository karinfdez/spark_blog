{{#partial "content"}}

    <section>
    <div class="container">
        <div class="edit-entry">
            <h2>Edit Entry</h2>
            <form action="/detail/{{editDetail.slug}}/edit" method="post">
                <label for="title"> Title</label>
                <input type="text" name="title" value={{editDetail.title}} maxlength="40"><br>
                <label for="entry">Entry</label>
                <textarea rows="5" name="entry">{{editDetail.entry}}</textarea>
                <label for="title"> Category</label>
                <input type="text" name="category" value={{editDetail.category}} maxlength="40"><br>
                <input type="submit" value="Save Entry" class="button">
                <a href="/detail/{{editDetail.slug}}" class="button button-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>
