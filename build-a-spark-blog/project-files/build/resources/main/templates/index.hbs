{{#partial "content"}}
<header>
    <div class="container">
        <div class="site-header">
            <a class="logo" href="/">SparkBlog</a>
            <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
        </div>
    </div>
</header>
<section>
    <div class="container">
        <div class="entry-list">
            {{#each blogLists}}
                <article>
                    <h2><a href="/detail/{{slug}}">{{title}}</a></h2>
                    <time datetime="2016-01-31 1:00">{{date}}</time>
                    <form onsubmit="confirm('Are you sure you want to delete the following blog entry?')" action="/detail/{{slug}}/delete" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="link center-text">Delete</button>
                    </form>

                </article>
            {{/each}}
        </div>
    </div>
</section>
{{/partial}}
{{#partial "footer"}}
<footer>
    <div>
        <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
        <a href="#">Terms</a>
    </div>
</footer>
</body>
</html>
{{/partial}}

