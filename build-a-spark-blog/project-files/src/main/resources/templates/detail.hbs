{{#partial "content"}}
<header>
    <div class="container">
        <div class="site-header">
            <a class="logo" href="/">SparkBlog</a>
            <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
        </div>
    </div>
</header>
<section>
    <div class="container">
        <div class="entry-list single">
            <article>
                <h1>{{detail.title}}</h1>
                <time datetime="2016-01-31 1:00">{{detail.time}}</time>
                <div class="entry">
                    <p>{{detail.entry}}</p>
                    <p><a class="link" href="edit.html">Edit Entry</a></p>
                </div>
            </article>
        </div>
    </div>
</section>
<section class="entry-comments">
    <div class="container">
        <h2>Comments</h2>
        {{#each detail.listComments}}
        <div class="comment">
            <strong>{{name}}</strong>
            <time datetime="2016-01-31 1:00">{{dateFormat}}</time>
            <p> {{comment}}</p>
        </div>
            {{/each}}
        <div class="new-comment">
            <form action="/detail/{{detail.slug}}" method="post">
                <label for="name"> Name</label>
                <input type="text" name="name"><br>
                <label for="comment">Comment</label>
                <textarea rows="5" name="comment"></textarea>
                <input type="submit" value="Post Comment" class="button">
            </form>
        </div>
    </div>
</section>
{{/partial}}
{{#partial "footer"}}
<footer>
    <div>
        <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
        <a href="#">Terms</a>
    </div>
</footer>
</body>
</html>
{{/partial}}

